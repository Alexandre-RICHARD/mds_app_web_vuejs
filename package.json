{
    "name": "mds_web_app_vuejs",
    "version": "1.0.0",
    "scripts": {
        "start": "vite --open",
        "build": "vue-tsc -b && vite build",
        "build-preview": "vite preview --open",
        " === Common Test === ": "",
        "global-test": "pnpm check-types && pnpm lint-fix && pnpm unit-test-once",
        "unit-test-watch": "vitest watch",
        "unit-test-once": "vitest run",
        "unit-test-report": "vitest run --reporter=html --coverage.enabled=true && vite preview --outDir report --open",
        "lint": "eslint .",
        "lint-fix": "eslint . --fix",
        "check-types": "vue-tsc --noEmit -p tsconfig.app.json",
        " === Pnpm === ": "",
        "install-dependencies": "pnpm i",
        "update-dependencies": "pnpm update",
        " === Cleaning === ": "",
        "clean": "rd /s /q .build",
        "clean:all": "rd /s /q node_modules .build & rd /s /q .build & del /q package-lock.json & del /q pnpm-lock.yaml"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Alexandre-RICHARD/mds_app_web_vuejs.git"
    },
    "dependencies": {
        "@mdi/font": "^7.4.47",
        "pinia": "^2.3.1",
        "vue": "^3.5.16",
        "vuetify": "^3.8.8"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^2.13.0",
        "@types/node": "^22.15.29",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@vitejs/plugin-vue": "^5.2.4",
        "@vitest/coverage-v8": "^3.2.1",
        "@vitest/ui": "^3.2.1",
        "@vue/tsconfig": "^0.7.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^8.57.1",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.4.1",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-vitest": "^0.4.1",
        "eslint-plugin-vue": "^10.1.0",
        "jsdom": "^26.1.0",
        "postcss": "^8.5.4",
        "prettier": "^3.5.3",
        "sass": "^1.89.1",
        "sass-loader": "^16.0.5",
        "tailwindcss": "^3.4.17",
        "typescript": "5.5.4",
        "typescript-eslint": "^8.33.1",
        "vite": "^6.3.5",
        "vite-plugin-vuetify": "^2.1.1",
        "vitest": "^3.2.1",
        "vue-eslint-parser": "^10.1.3",
        "vue-tsc": "^2.2.10"
    }
}
